<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:catty="http://catty.pink/schema/catty"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
  http://catty.pink/schema/catty
  http://catty.pink/schema/catty.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <context:component-scan base-package="pink.catty.test.spring" />

  <catty:protocol id="protocol"/>
  <catty:server-config id="server" port="25002" worker-num="4"/>
  <catty:exporter protocol="protocol" server-config="server">
    <catty:service interface="pink.catty.test.service.AService" ref="SpringAService"/>
    <catty:service interface="pink.catty.test.service.BService" ref="SpringBService"/>
  </catty:exporter>
</beans>
